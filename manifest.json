{
    "manifest_version": 2,
    "name": "UserSelecter",
    "description": "Extension for removing selection lock on websites",
    "version": "1.6",
    "browser_action": {
        "default_icon": "favicon.png",
        "default_popup": "popup.html",
        "default_title": "UserSelecter"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": [
            "css/styles.css"
        ],
        "js":      [
            "scripts/inPageScripts/main.js",
            "scripts/inPageScripts/selectEndEvent.js",
            "scripts/inPageScripts/CursorPositionGetter.js",
            "scripts/inPageScripts/CopyUnlocker.js"
        ]
    }],
    "permissions": [
        "activeTab"
    ],
    "background" : {
        "page": "background.html"
    }
}
